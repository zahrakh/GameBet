<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/clickLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtTeam1Title"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/txtTeam2Title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Team1" />

    <TextView
        android:id="@+id/txtTeam1Point"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtTeam1Title"
        app:layout_constraintStart_toStartOf="@+id/txtTeam1Title"
        app:layout_constraintTop_toBottomOf="@+id/txtTeam1Title"
        tools:text="1" />

    <TextView
        android:id="@+id/txtTeam2Title"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Team2" />

    <TextView
        android:id="@+id/txtTeam2Point"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtTeam2Title"
        app:layout_constraintStart_toStartOf="@+id/txtTeam2Title"
        app:layout_constraintTop_toBottomOf="@+id/txtTeam2Title"
        tools:text="1" />

    <TextView
        android:id="@+id/txt_actual_prediction"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="@dimen/spacing_s"
        android:gravity="center"
        android:text="@string/txt_actual_prediction"
        app:layout_constraintBottom_toBottomOf="@+id/txtTeam1Point"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTeam1Title" />

    <TextView
        android:id="@+id/txt_your_prediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_m"
        android:text="@string/txt_your_prediction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_actual_prediction" />


    <TextView
        android:id="@+id/txtTeam1PointPrediction"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtTeam1Point"
        app:layout_constraintStart_toStartOf="@+id/txtTeam1Point"
        app:layout_constraintTop_toBottomOf="@+id/txtTeam1Point"
        tools:text="1" />

    <TextView
        android:id="@+id/txtTeam2PointPrediction"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtTeam2Point"
        app:layout_constraintStart_toStartOf="@+id/txtTeam2Point"
        app:layout_constraintTop_toBottomOf="@+id/txtTeam2Point"
        tools:text="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_xl"
        android:background="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_your_prediction" />

</androidx.constraintlayout.widget.ConstraintLayout>